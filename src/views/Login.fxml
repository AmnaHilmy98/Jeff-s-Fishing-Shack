      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="306.0" prefWidth="370.0">
         <children>
            <TextField fx:id="userName" layoutX="145.0" layoutY="105.0" prefHeight="25.0" prefWidth="181.0" promptText="Enter your email here" />
            <PasswordField fx:id="userPassword" layoutX="145.0" layoutY="152.0" prefHeight="25.0" prefWidth="181.0" />
            <Button layoutX="150.0" layoutY="209.0" mnemonicParsing="false" onAction="#auth" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: blue;" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect></Button>
            <Label layoutX="45.0" layoutY="105.0" text="Username">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label layoutX="45.0" layoutY="152.0" text="Password">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label layoutX="45.0" layoutY="47.0" text="Log In" textFill="BLUE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="129.0" layoutY="265.0" text="New user?" />
            <Button layoutX="187.0" layoutY="260.0" mnemonicParsing="false" onAction="#register" style="-fx-background-color: #f5f5f5;" text="Register" textFill="#0400ff" underline="true">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button layoutX="260.0" layoutY="16.0" mnemonicParsing="false" onAction="#mainMenu" style="-fx-background-color: white;" text="Main Menu" textFill="BLUE">
               <font>
                  <Font size="15.0" />
               </font>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </children>
</GridPane>
